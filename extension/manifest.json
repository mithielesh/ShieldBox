{
  "manifest_version": 3,
  "name": "Shield Box",
  "version": "1.0",
  "description": "Injects Shield Box phishing alert panel",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Shield Box"
  },
  "permissions": [
    "scripting",
    "tabs",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "http://127.0.0.1:5000/*",
    "https://mail.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "floatingpanel.js",
        "content-script.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": [
        "emailParser.js",
        "emailWarning.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "floatingpanel.html",
        "style.css",
        "icons/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://127.0.0.1:5000 http://localhost:5000"
  }
}